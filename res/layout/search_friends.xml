<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0"
    tools:context="com.anaadihsoftech.locationfinder.MainActivity" >
	
    <LinearLayout 
        android:id="@+id/llSearchFriend"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight=".1"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >
    <Spinner
    android:id="@+id/spnerSearchFriendGpName"
    android:layout_width="0dip"
    android:layout_weight=".3"
    android:layout_height="fill_parent"
    android:background="@android:drawable/btn_dropdown"
    android:spinnerMode="dropdown" />
    <EditText
            android:id="@+id/edtSearchFriendSearchUser"
            android:layout_width="0dip"
            android:layout_weight=".5"
             android:layout_height="fill_parent"
            android:ems="10"
            android:hint="@string/RegFName"
	        android:textColor="@android:color/black"
	        android:gravity="center"
	        android:textSize="15sp"
	        android:singleLine="true" >
            
        </EditText>
        
        <Button
            android:id="@+id/btnSearchFriendFillter"
            android:layout_width="0dip"
            android:layout_weight=".2"
            android:layout_height="fill_parent"
            android:text="@string/RegSubmit" />
    </LinearLayout>
     <ListView
            android:id="@+id/lvSearchFriendFillterList"
            android:layout_width="match_parent"
            android:layout_height="0dip"
        	android:layout_weight=".9" >
        </ListView>
</LinearLayout>
